<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#041e42</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="android:statusBarColor">@android:color/background_dark</item>

    </style>

    <!--SAME STYLE BUT WITHOUT ACTION BAR -->
    <style name="AppTheme2" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#041e42</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="android:statusBarColor">@android:color/background_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!-- UNIVERSAL BUTTON DESIGN -->
    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">#041e42</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:height">40dp</item>
    </style>

</resources>
